@model TAIKHOAN
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        //@Html.ValidationSummary() hiển thị ràng buộc tại trong meta data
        @Html.AntiForgeryToken()//chống tấn công ddos
        <div class="row">
            <div class="col-sm-3 col-lg-3">Username</div>
            <div class="col-sm-9 col-lg-9">
                @Html.TextBoxFor(m => m.UserID)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-lg-3">Password</div>
            <div class="col-sm-9 col-lg-9">
                @Html.TextBoxFor(m => m.Password)
            </div>
        </div>
        <div class="row">
            <button class="submit">login</button>
        </div>
    }
</body>
</html>
